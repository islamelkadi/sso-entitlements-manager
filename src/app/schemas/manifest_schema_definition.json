{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "ignore": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "target_type": {
                        "$ref": "#/$defs/target_type"
                    },
                    "target_names": {
                        "$ref": "#/$defs/target_names"
                    },
                    "nested": {
                        "$ref": "#/$defs/nested"
                    }
                },
                "required": [
                    "target_type",
                    "target_names"
                ],
                "allOf": [
                    {
                        "$ref": "#/$defs/nested_dependency"
                    }
                ]
            }
        },
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "target_type": {
                        "$ref": "#/$defs/target_type"
                    },
                    "access_type": {
                        "$ref": "#/$defs/access_type"
                    },
                    "target_names": {
                        "$ref": "#/$defs/target_names"
                    },
                    "nested": {
                        "$ref": "#/$defs/nested"
                    },
                    "permission_set_name": {
                        "$ref": "#/$defs/permission_set_name"
                    },
                    "principal_name": {
                        "$ref": "#/$defs/principal_name"
                    },
                    "principal_type": {
                        "$ref": "#/$defs/principal_type"
                    },
                    "rule_type": {
                        "$ref": "#/$defs/rule_type"
                    }
                },
                "required": [
                    "target_type",
                    "access_type",
                    "target_names",
                    "permission_set_name",
                    "principal_name",
                    "principal_type"
                ],
                "allOf": [
                    {
                        "$ref": "#/$defs/nested_dependency"
                    }
                ]
            }
        }
    },
    "required": [
        "rules"
    ],
    "$defs": {
        "target_type": {
            "type": "string",
            "enum": [
                "OU",
                "ACT"
            ]
        },
        "target_names": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "access_type": {
            "type": "string",
            "enum": [
                "RBAC",
                "ABAC",
                "JIIT"
            ]
        },
        "nested": {
            "type": "boolean",
            "default": false
        },
        "permission_set_name": {
            "type": "string"
        },
        "principal_name": {
            "type": "string"
        },
        "principal_type": {
            "type": "string",
            "enum": [
                "GROUP",
                "USER"
            ]
        },
        "rule_type": {
            "type": "string",
            "enum": [
                "EXPLICIT",
                "IMPLICIT"
            ],
            "default": "EXPLICIT"
        },
        "nested_dependency": {
            "dependencies": {
                "nested": {
                    "oneOf": [
                        {
                            "properties": {
                                "target_type": {
                                    "enum": [
                                        "OU"
                                    ]
                                }
                            }
                        },
                        {
                            "not": {
                                "properties": {
                                    "target_type": {
                                        "enum": [
                                            "OU"
                                        ]
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}